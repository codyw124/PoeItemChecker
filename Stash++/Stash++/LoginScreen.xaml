<Window x:Class="Stash__.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stash__"
        mc:Ignorable="d"
        Title="Select Account" Height="600" Width="800" FontSize="24" Background="DimGray" WindowStartupLocation="CenterScreen">
    <Border Background="LightSlateGray" CornerRadius="20" Margin="250,150">
        <StackPanel Margin="20">
            <Label Content="Select Account" HorizontalAlignment="Center"></Label>

            <Separator></Separator>

            <Label Content="Account Name" FontSize="18"></Label>
            <TextBox Name="accountName" FontSize="18"></TextBox>
            <Button Name="submitAccount" Content="Submit" Margin="60 20" Click="submitAccount_Click"></Button>
        </StackPanel>
    </Border>
</Window>
